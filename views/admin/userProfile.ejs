  <link href="../assets/demo/demo.css" rel="stylesheet" />

  <!--  Plugin for Sweet Alert -->
  <script src="../assets/js/plugins/sweetalert2.js"></script>
</head>

<body class="">

  <%if (condition === 1) {%>
  <script>
    Swal.fire({
      type: 'success',
      title: 'Cập nhật thông tin thành công',
      showConfirmButton: false,
      timer: 1500
    })
  </script>
  <% } %>

  <%if (condition === 500) {%>
  <script>
    Swal.fire({
      type: 'error',
      title: 'Cập nhật thông tin không thành công',
      showConfirmButton: false,
      timer: 2000
    })
  </script>
  <% } %>

  <div class="wrapper ">
    
    <% include slideBar %>

    <div class="main-panel">
      
      <% include navBar %>

      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-10 mx-auto">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h3 class="card-title"><%= profile.fullname %></h4>
                </div>
                <div class="card-body">
                  <form method="POST" class="readonly">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Họ</label>
                          <% if (!profile.firstname) {%>
                          <input type="text" class="form-control" name="firstname" />
                          <% } else { %>
                          <input type="text" class="form-control" name="firstname" value="<%= profile.firstname %>" />
                          <% } %>
                          <!-- <input type="text" class="form-control" name="firstname"> -->
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Tên</label>
                          <% if (!profile.lastname) {%>
                          <input type="text" class="form-control" name="lastname" />
                          <% } else { %>
                          <input type="text" class="form-control" name="lastname" value="<%= profile.lastname %>" />
                          <% } %>
                          <!-- <input type="text" class="form-control" name="lastname"> -->
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Số điện thoại</label>
                          <% if (!profile.phone) {%>
                          <input type="number" class="form-control" name="phone" />
                          <% } else { %>
                          <input type="number" class="form-control" name="phone" value="<%= profile.phone %>" />
                          <% } %>
                          <!-- <input type="text" class="form-control" name="phone"> -->
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Email</label>
                          <% if (!profile.email) {%>
                          <input type="text" class="form-control" name="email" />
                          <% } else { %>
                          <input type="text" class="form-control" name="email" value="<%= profile.email %>" />
                          <% } %>
                          <!-- <input type="email" class="form-control" name="email"> -->
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Địa chỉ</label>
                          <% if (!profile.address) {%>
                          <input type="text" class="form-control" name="address" />
                          <% } else { %>
                          <input type="text" class="form-control" name="address" value="<%= profile.address %>" />
                          <% } %>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <select id="tp_nguyen_quan" name="city" class="custom-select">
                            <% if (!profile.city) {%>
                            <option selected disabled>Tỉnh/Thành phố</option>
                            <% } else { %>
                            <option selected value="<%= profile.city %>"><%= profile.city %></option>
                            <% } %>
                            <option value="Hà Nội">Hà Nội</option>
                            <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <select id="huyen_nguyen_quan" name="district" class="custom-select">
                            <% if (!profile.district) {%>
                            <option selected disabled>Quận/Huyện</option>
                            <% } else { %>
                            <option selected value="<%= profile.district %>"><%= profile.district %></option>
                            <% } %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Nơi làm việc</label>
                          <% if (!profile.workplace) {%>
                          <input type="text" class="form-control" name="workplace" />
                          <% } else { %>
                          <input type="text" class="form-control" name="workplace" value="<%= profile.workplace %>" />
                          <% } %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <div class="form-group">
                            <label class="bmd-label-floating">Ghi chú</label>
                            <% if (!profile.aboutme) {%>
                            <textarea class="form-control" name="aboutme" rows="5"></textarea>
                            <% } else { %>
                            <textarea class="form-control" name="aboutme" rows="5"><%=profile.aboutme %></textarea>
                            <% } %>
                            <!-- <textarea class="form-control" rows="5"></textarea> -->
                          </div>
                        </div>
                      </div>
                    </div>
                    <button type="button" class="btn btn-primary pull-right" id="edit-profile">Chỉnh sửa thông tin</button>
                    <button type="submit" class="btn btn-primary pull-right" id="update-profile"
                      style="display: none">Chấp nhận</button>
                    <div class="clearfix"></div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer">
        <div class="container-fluid">
          <nav class="float-left">
            <ul>
              <li>
                <a href="https://github.com/TorRient/electronic-id-card">
                  SYSTEM ID
                </a>
              </li>
              <li>
                <a href="https://github.com/TorRient/electronic-id-card">
                  About Us
                </a>
              </li>
              <li>
                <a href="https://github.com/TorRient/electronic-id-card">
                  Blog
                </a>
              </li>
              <li>
                <a href="https://github.com/TorRient/electronic-id-card">
                  Licenses
                </a>
              </li>
            </ul>
          </nav>
          <div class="copyright float-right">
            &copy;
            <script>
              document.write(new Date().getFullYear())
            </script>, Design <i class="material-icons">favorite</i> by
            <a href="https://github.com/TorRient/electronic-id-card" target="_blank">ENDGAME</a> group.
          </div>
        </div>
      </footer>
    </div>
  </div>

